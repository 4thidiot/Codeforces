#include <bits/stdc++.h>
using namespace std;



void solve()
{
    int n;
    cin>>n;
    
    if(n%2==0)   //for even numbers
    {
        cout<<(n-1)/2<<" "<<((n-1)/2)+1<<" "<<1<<endl;
    }
    else   //for odd numbers
    {
        if(((n-1)/2)&2!=0)
            cout<<((n-1)/2)-2<<" "<<((n-1)/2)+2<<" "<<1<<endl;
        else
            cout<<((n-1)/2)-1<<" "<<((n-1)/2)+1<<" "<<1<<endl;
    }
}



int main() {
	
	int t;
	cin>>t;
	while(t--)
	    solve();
	    
    return 0;
}
